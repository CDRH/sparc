.active-scaffold a.as_cancel, .submit {
  color: black;
  font-family: Arial, sans-serif;
  font-weight: bold;
  font-size: 12px;
  letter-spacing: 0;
  margin: 0;
  margin-top: 5px;
}

.active-scaffold a.inline-adapter-close {
  background-image: image-url('close.png') !important;
}

.active-scaffold .draggable-list {
  background-color: #ffff88;
  margin: 5px;
}

.active-scaffold .sub-form table td {
  color: black !important;
}

.add-area {
  border: 1px solid;
  max-height: 150px;
  min-width: 550px;
  overflow: auto;
  padding: 3px !important;
}

.add-area a.destroy {
  background: 0 0 no-repeat;
  background-image: image-url('cross.png');
  color:red;
  font-weight: bold;
  height: 16px;
  padding: 0;
  text-indent: -4000px;
  width: 16px;
}

.association-record .actions {
  vertical-align: top !important;
}

.download {
  color: black !important;
  text-decoration: none !important;
}

.edit-related-data {
  border: 1px solid;
  padding: 5px !important;
}

.guest-actions {
  background-position: 1px 50%;
  background-repeat: no-repeat;
  float: right;
  font: bold 14px arial;
  letter-spacing: -1px;
  margin-left: 5px;
  padding: 1px 2px;
  text-decoration: none;
  white-space: nowrap;
}

.guest-search {
  background-image: image-url('magnifier.png');
  background-position: 5px 50%;
  background-repeat: no-repeat;
  margin: 0;
  padding: 5px 5px 5px 25px;
}

#image-viewer {
  width:700px;
  height: 600px;
}

.modal-body {
  overflow: auto;
}

.related-search-results {
  max-height: 200px;
  max-width: 600px;
  overflow: auto;
}

.reset-override {
  margin-top: 0px !important;
}

.show_scroll_div {
  background-color:#e6e6e6;
  border:1px solid;
  height:70px;
  overflow:auto;
  width:400px;
}

.show-list {
  min-height: 5px;
  max-height: 80px;
  width: 500px;
  overflow: auto;
  border: 1px solid;
}

.sub-form-record .actions a.destroy {
  background: white !important;
  color: #06c !important;
  display: inline !important;
  padding: 1px 5px !important;
}

table.add-existing {
  width: auto;
}

table.add-existing td {
  border-bottom: none !important;
  border-left: none !important;
}

.title-page {
  height: 62px;
}

/* Content */

#content .active-scaffold th a,
#content .active-scaffold th p {
  background-color: transparent;
}

#content .edit,
#content .show_search,
#content .destroy,
#content .destroy_existing,
#content .disabled,
#content h2,
#content .active-scaffold-header .actions {
  display: none;
}

#content .main-content ol li .form-element,
li {
  list-style: none !important;
}


/* Ceramic Group */

.ceramic_group {
  background: #E9F2F9;
  border:1px solid;
}

.ceramic_group {
  background: #E9F2F9;
  border:1px solid;
}

.ceramic_group table td{
  border: 1px solid #E9F2F9;
  text-align: left;
}

.ceramic_group_header {
  background: white;
  border: 1px solid white;
}

.ceramic_group_header td {
  border: 1px solid white;
}

.ceramic_group_header table {
  border: none ;
}
