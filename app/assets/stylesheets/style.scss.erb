/* Start Main Site */

// ---------------
// Extend Selectors
// ---------------

%simple_button {
  border: 1px solid $darkbeige;
  display: inline-block;
  font-size: .95em;
  margin-bottom: .3em;
  margin-right: .02em;
  min-width: 1.2em;
  padding: .1em .15em;
  text-align: center;
  text-decoration: none;
}

%simple_button_background {
  background-color: $beige;
}

//---------------
// HTML
//---------------

html {
  background-color: lighten($gray-base, 75%);
}

@font-face {
  font-family: 'joehand_2regular';
  font-style: normal;
  font-weight: normal;
  src: url(<%= asset_path 'jh2trial-webfont.woff2' %>) format('woff2'), 
    url(<%= asset_path 'jh2trial-webfont.woff' %>) format('woff');
}

// change fonts for main subheads
.main_content > h2 {
  font-family: 'Jura', sans-serif;
  font-size: 2.3em;
}

.simple_list {
  list-style: none;
}

// Pagination

.pagination {
  margin: .5em 0;
  padding: 0;
  a, em, span {
    @extend %simple_button;
  }
  a:focus, a:hover {
    @extend %simple_button_background;
  }
  .current {
    background-color: lighten($gray-base, 75%);
  }
}

.pagination_container .pagination {
  float: right;
}

// Columns 

@media (min-width: $container-tablet) {
  .column_3 {
    column-count: 3;
    -moz-column-count: 3;
    -webkit-column-count: 3;
  }
}

// Illustration Image display

.illustration {
  max-width: 100%;
  img {
    max-width: 100%;
  }
  .caption {
    background-color: $beige;
    font-size: .9em;
    margin-top: .5em;
    padding: .2em .4em;
    text-align: center;
  }
  &.illustration_center {
    margin: 20px auto;
    text-align: center;
  }
  &.illustration_left {
    margin: 0 20px 20px 0;
    float: left;
  }
  &.illustration_right {
    margin: 0 0 20px 20px;
    float: right;
  }
}

@media (max-width: $container-tablet) {
  .illustration {
    float: none !important;
    &.illustration_center, 
    &.illustration_left,
    &.illustration_right {
      margin: 20px 0;
    }

  }
}

