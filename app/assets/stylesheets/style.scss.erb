// Home Page
//---------------

.home_first_band {
  background: url(<%= asset_path 'band_aerial.jpg' %>) center center;
  height: 400px;
  margin-top: -22px;
  margin-bottom: 2em;
  p {
    background-color: rgba(0,0,0,.6);
    color: #fff;
    float: right;
    font-family: 'Jura', sans-serif;
    font-size: 1.8em;
    height: 400px;
    padding: 20px;
    text-align: center;
    vertical-align: bottom;
    width: 300px;
  }
}

.home_second_band {
  margin-top: 2em;
}

a.content {
  background-position: center;
  background-size: 800px 600px;
  display: block;
  margin-left: -15px;
  margin-right: -15px;
  overflow: hidden;
  padding: 0;
  &:focus, &:hover {
    background-size: 960px 720px;
    background-position: center;
    transition: all 0.5s;
    -webkit-transition: all 0.5s;
    -o-transition: all 0.5s;
    -moz-transition: all 0.5s;
  }
  .row {
    margin-right: 15px;
    margin-left: 15px;
  }
  &:focus h4, &:hover h4 {
    font-weight: 800;
  }
}

a.content:focus .inner_content,
a.content:hover .inner_content {
  border-bottom: 10px solid $blue;
  padding-top: 1.5em;
}

.home_callout .explore_inner {
  background-color: rgba(0,0,0,.25);
  height: 100%;
}

.home_callout:focus .explore_inner,
.home_callout:hover .explore_inner {
  background-color: transparent;
}
   
.home_callout {
  border: 4px solid $darkbrown;
  display: block;
  font-size: 1.2em;
  height: 16em;
}

@media (max-width: $container-tablet) {
  .home_callout {
    height: 13em;
  }
}

// Set background pictures and widths
// Explore
.home_callout1 {
  background-image: url(<%= asset_path 'home_explore.jpg' %>);
  border-bottom-width: 2px;
}

// Query
