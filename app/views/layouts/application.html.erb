<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'ekko-lightbox.min' %>
    <%= javascript_include_tag 'ekko-lightbox.min' %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SPARC</title>

    <link href="https://fonts.googleapis.com/css?family=Jura:400,600,700" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <% section = @section || params["controller"] %>

  <body class='body_<%= params[:controller] %> body_<%= params[:action] %>'>

    <header class="body_head">
      <!-- if statement to only show on home page -->
      <% if current_page?(home_path) %>
        <div class="header_top">
          <div class="header_stuff container">
            <div class="site_logo_container">
              <div class="site_image">
                <img src="assets/effigy3.png">
              </div>
              <h1 class="header_words header_words_nav">
                  <span class="head_sp">Salmon Pueblo</span>
                  <span class="head_arc">Archaeological Research Collection</span>
              </h1>
            </div><!-- site_logo_container -->
          </div><!-- /header_stuff -->
        </div><!-- /header_top -->
      <% end %>
      <!-- END if statement -->

      <div class="navbar navbar-default sparc_navbar">
        <div class="container">

        <!-- if statement to show everywhere BUT home page -->
        <% if !current_page?(home_path) %>
          <h1 class="header_words">
            <%= link_to home_path, class: "home_links" do %>
              <span class="head_sp">Salmon Pueblo</span>
              <span class="head_arc">Archaeological Research Collection</span>
            <% end %>
          </h1>
        <% end %>
        <!-- END if statement-->

        
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <!-- <li <#= "class=active" if section == "static" %>>
                <#= link_to "SPARC Home", home_path %>
              </li> -->
              <li <%= "class=active" if section == "explore" %>>
                <%= link_to "Explore Pueblo", explore_path %>
              </li>
              <li <%= "class=active" if section == "query" %>>
                <%= link_to "Query Data", query_path %>
              </li>
              <li <%= "class=active" if section == "document" %>>
                <%= link_to "Documents", documents_path %>
              </li>
              <li <%= "class=active" if section == "image" %>>
                <%= link_to "Image Gallery", gallery_path %>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li <%= "class=active" if section == "about" %>><%= link_to "About", about_path %></li>
              <%# TODO the below will NOT be part of the final site %>
              <li class="dropdown <%= "active" if section.include?("admin") %>">
                <a class="dropdown-toggle" id="drop4" role="button" data-toggle="dropdown" href="#">Admin DB View<b class="caret"></b></a>
                <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4" data-turbolinks="false">
                  <li><%= link_to('Units', admin_units_path)%></li>
                  <li><%= link_to('Strata', admin_strata_path)%></li>
                  <li><%= link_to('Features', admin_features_path)%></li>
                  <%# begin alphabetical %>
                  <li><%= link_to('Burials', admin_burials_path)%></li>
                  <li><%= link_to('Ceramics 2005', admin_ceramics_path)%></li>
                  <li><%= link_to('Ceramic CLAP', admin_ceramic_claps_path)%></li>
                  <li><%= link_to('Ceramic Inventories', admin_ceramic_inventories_path)%></li>
                  <li><%= link_to('Ceramic Vessels', admin_ceramic_vessels_path)%></li>
                  <li><%= link_to('Documents', admin_documents_path)%></li>
                  <li><%= link_to('Eggshells', admin_eggshells_path)%></li>
                  <li><%= link_to('Faunal Inventories', admin_faunal_inventories_path)%></li>
                  <li><%= link_to('Faunal Tools', admin_faunal_tools_path)%></li>
                  <li><%= link_to('Lithic Debitages', admin_lithic_debitages_path)%></li>
                  <li><%= link_to('Lithic Inventories', admin_lithic_inventories_path)%></li>
                  <li><%= link_to('Lithic Tools', admin_lithic_tools_path)%></li>
                  <li><%= link_to('Images', admin_images_path)%></li>
                  <li><%= link_to('Obsidian Inventories', admin_obsidian_inventories_path) %></li>
                  <li><%= link_to('Ornaments', admin_ornaments_path)%></li>
                  <li><%= link_to('Perishables', admin_perishables_path)%></li>
                  <li><%= link_to('Pollen Inventories', admin_pollen_inventories_path)%></li>
                  <li><%= link_to('Select Artifacts', admin_select_artifacts_path)%></li>
                  <li><%= link_to('Soils', admin_soils_path)%></li>
                  <li><%= link_to('Tree Rings', admin_tree_rings_path)%></li>
                  <li><%= link_to('Wood Inventories', admin_wood_inventories_path)%></li>
                  <li><%= link_to('Zones', admin_zones_path) %></li>
                </ul>
              </li>
            </ul>
          </div> <!-- /navbar-collapse -->
        </div>
      </div>

      <%# TODO can remove this check after active scaffold is removed %>
      <% if lookup_context.exists?("subnavs/_#{params["controller"]}") %>
        <%= render "subnavs/#{params["controller"]}" %>
      <% end %>

    </header>

    <div class="container">
      <%= yield %>
    </div>

    <footer class="project_footer">
      <div class="container text-center">
        <p>Footer Stuff Goes Here</p>
      </div>
    </footer>
  </body>
</html>
