<h2><%= @unit.unit_no %></h2>

<%= render "unit_tabs" %>

<div role="tabpanel" class="tab-pane active" id="summary">
  <div class="row">
    <div class="col-md-6">
      <h3>Samples and Features</h3>

      <p>
        <% if @unit.features.count == 0 %>
          Features (0)
        <% else %>
          <%= link_to "Features (#{@unit.features.count})", query_results_path({
                category: "features", subcat: "features",
                table: "features", unit_no: @unit.unit_no
            }) %>
        <% end %>
      </p>
      <p>
        <% if @unit.pollen_inventories.count == 0 %>
          Pollen Inventory (0)
        <% else %>
          <%= link_to "Pollen Inventory (#{@unit.pollen_inventories.count})", query_results_path({
              category: "samples", subcat: "pollen_inventory",
              table: "pollen_inventory", units: @unit.unit_no
            }) %>
        <% end %>
      </p>
      <p>
        <% if @unit.soils.count == 0 %>
          Soil (0)
        <% else %>
          <%= link_to "Soil (#{@unit.soils.count})", query_results_path({
              category: "samples", subcat: "soil",
              table: "soil", units: @unit.unit_no
            }) %>
        <% end %>
      </p>
      <p>
        <% if @unit.tree_rings.count == 0 %>
          Tree Ring (0)
        <% else %>
          <%= link_to "Tree Ring (#{@unit.tree_rings.count})", query_results_path({
              category: "samples", subcat: "tree_ring",
              table: "tree_ring", unit_no: @unit.unit_no
            }) %>
        <% end %>
