      <h3>Ceramics</h3>

      <p>
        <% if @unit.ceramic_inventories.count == 0 %>
          Ceramic Inventory (0)
        <% else %>
          <%= link_to "Ceramic Inventory (#{@unit.ceramic_inventories.count})", query_results_path({
              category: "artifacts", subcat: "ceramics",
              table: "ceramic_inventory", units: @unit.unit_no
            }) %>
        <% end %>
      </p>

      <% ["ceramic_clap", "ceramic", "ceramic_vessel"].each do |cer| %>
        <p>
          <% if @unit.send(cer.pluralize).count == 0 %>
            <%= cer.titleize %> (0)
          <% else %>
            <%= link_to "#{cer.titleize} (#{@unit.send(cer.pluralize).length})", query_results_path({
              category: "artifacts", subcat: "ceramics",
              table: cer, units: @unit.unit_no
            }) %>
          <% end %>
        </p>
      <% end %>

    </div> <!-- left column -->

