<h1><%= @unit.unit_no %></h1>

<%= render "unit_tabs" %>

<div role="tabpanel" class="tab-pane active" id="summary">
  <div class="row">
    <div class="col-md-6">
      <h3>Samples and Features</h3>
      <p>
        <%= link_to "Features", query_results_path({
          type: "features",
          category: "features",
          table: "features",
          unit: @unit.id
          })
        %>
      </p>
      <% @associated["samples"].each do |category, tables| %>
        <% tables.each do |table| %>
          <p>
            <%= link_to table.titleize, query_results_path({
                type: "samples",
                category: category,
                table: table,
                unit: @unit.id
              })
            %>
          </p>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">
      <% @associated["artifacts"].each do |category, tables| %>
        <h4><%= category.titleize %></h4>
        <% tables.each do |table| %>
          <p>
            <%= link_to table.titleize, query_results_path({
                type: "artifacts",
                category: category,
                table: table,
                unit: @unit.id
              })
            %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div> <!-- /tab-content -->
